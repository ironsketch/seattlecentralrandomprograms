
public class forLOOPfun {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int max = 0;
		int rows = 10;
		
		for(int i=0;i<rows;i++){
			for(int b=0;b<max;b++){
				System.out.print("* ");
				if(max!=10){
					max++;
				}
			}
			System.out.println("");
		}
	}

}
