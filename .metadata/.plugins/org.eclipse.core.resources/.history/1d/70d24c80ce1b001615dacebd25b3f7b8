
public class forLOOPfun {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int cols = 10;
		int rows = 10;
		
		for(int i=0;i<rows;i++){
			for(int a=10;a>cols-i;a++){
				System.out.print(" ");
			}
			for(int b=0;b<i;b++){
				System.out.print("* ");
			}
			System.out.println("");
		}
	}

}
